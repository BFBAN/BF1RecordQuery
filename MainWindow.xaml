<Window x:Class="BF1RecordQuery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BF1RecordQuery"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        FontFamily="/Fonts/#FuturaMaxiBook-TC" FontWeight="Light"
        Title="[BFBAN] 战地1战绩查询工具" Width="1600" Height="900">

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="True" Grid.Row="0">
                <Button x:Name="Button_QueryRecord" DockPanel.Dock="Right" Content="查詢" Margin="5" Padding="25,10,25,10"
                        Click="Button_QueryRecord_Click"/>
                <TextBox x:Name="TextBox_PlayerName" Text="CrazyZhang666" VerticalContentAlignment="Center" 
                         Margin="5" Padding="3"/>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="Gray" BorderThickness="0.7" Margin="5">
                    <Image Grid.Column="0" Margin="5" Stretch="Uniform"
                           Width="60" Height="60" x:Name="Image_UserAvatar"/>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="TextBlock_UserName" Grid.Row="0" Text="玩家ID"
                               VerticalAlignment="Bottom" Margin="5,5,5,0" FontSize="24"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top">
                        <Image x:Name="Image_Rank" Margin="5,0,5,5" VerticalAlignment="Center"/>
                        <TextBlock Text="等級" Margin="5,0,0,5" VerticalAlignment="Center" />
                        <TextBlock x:Name="TextBlock_Rank" Text="0" Margin="5,0,5,5" VerticalAlignment="Center" />
                        <TextBlock Text="遊戲時間" Margin="5,0,0,5" VerticalAlignment="Center" />
                        <TextBlock x:Name="TextBlock_PlayedTime" Text="0" Margin="5,0,5,5" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>

            <ListBox Grid.Row="2" x:Name="ListBox_GameTools_Stats" Margin="5">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </ListBox.Resources>
            </ListBox>
        </Grid>

        <ListBox Grid.Column="1" x:Name="ListBox_GameTools_Weapons" Margin="5">
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </ListBox.Resources>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#5d5a58">
                            <Image Width="80" Height="40" Source="{Binding WeaponImage}" Stretch="Uniform"/>
                        </Border>
                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Margin="5" Text="{Binding WeaponName}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding WeaponStar}" Foreground="#f17f1a" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Margin="5" Text="{Binding WeaponKill}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding WeaponKPM}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding WeaponAccuracy}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding WeaponHeadshots}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding WeaponHitVKills}" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <Grid.ToolTip>
                            <Border Background="#5d5a58">
                                <Image Source="{Binding WeaponImage}"/>
                            </Border>
                        </Grid.ToolTip>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Grid.Column="2" x:Name="ListBox_GameTools_Vehicles" Margin="5">
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </ListBox.Resources>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#5d5a58">
                            <Image Width="80" Height="40" Source="{Binding VehicleImage}" Stretch="Uniform"/>
                        </Border>
                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Margin="5" Text="{Binding VehicleName}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding VehicleStar}" Foreground="#f17f1a" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock Margin="5" Text="{Binding VehicleKill}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding VehicleKPM}" FontSize="14"/>
                                <TextBlock Margin="5" Text="{Binding VehicleDestroyede}" FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <Grid.ToolTip>
                            <Border Background="#5d5a58">
                                <Image Source="{Binding VehicleImage}"/>
                            </Border>
                        </Grid.ToolTip>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
